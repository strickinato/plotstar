{
  "name": "plotter-otter",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && serve public",
    "build": "yarn elm:build && yarn css:build",
    "develop": "concurrently 'yarn elm:develop' 'yarn css:develop'",
    "elm:develop": "elm-live src/Main.elm --dir=public -- --debug --output=public/elm.js",
    "css:develop": "find styles -name '*.css' | entr yarn css:build",
    "elm:build": "elm make src/Main.elm --output=public/elm.js",
    "css:build": "tailwindcss build styles/style.css --output public/output.css"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "elm": "^0.19.1-3",
    "elm-live": "^4.0.2",
    "entr-bin": "^0.0.1",
    "serve": "^11.3.0",
    "tailwindcss": "^1.4.6"
  }
}
